.panel.panel-default
  .panel-heading
    h3.panel-title Invite Balance 
  table.table.table-hover.table-bordered(cellspacing="0")
    thead
      tr
        th(style='text-align:center;') 
          span.fa.fa-flag-checkered
        th Alias
        th #{settings.locale.tx_address} 
        th.hidden-xs Balance (INV)
    tbody
      - var count = 0
      if inviteBalance
        each item in inviteBalance
          - count = count + 1
          - var itemFixed = item.inviteBalance / 100000000
          tr
            td(style='text-align:center;') 
              =count
            if item.alias == ''
              if item.a_id == 'ST2HYE5KMszAdBcGo3kw7Qsb9u1nRQhac4'
                td Merit Foundation
              else
                td anonymous
            else
              td 
                a(href='/address/#{item.alias}') #{item.alias}
            td
              a(href='/address/#{item.a_id}') #{item.a_id}
              include ./rl_labels.jade
            td.hidden-xs
              =itemFixed
